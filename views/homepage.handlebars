<div class="post-list">
{{#if loggedIn}}
{{#each posts}}
<div class="card">
    <div class="card-header">
        <a href="/posts/{{id}}"class="card-title">{{title}} </a>
        <span>({{format_date created_at}})</span>
    </div>
  </div>
  {{/each}}
  {{else}}
  {{#each posts}}
  <div class="card-header m-3">
        <span class="card-title">{{title}} </span>
        <span>{{format_date created_at}}</span>
  </div>
</div>
{{/each}}
{{/if}}
</div>


